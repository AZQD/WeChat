<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">

      <view class="page-section">
        <view class="weui-cell__bd" style="margin: 30rpx 0" >
          <textarea class="weui-input" name="input" placeholder="这是一个输入框" id="" cols="30" rows="10"></textarea>
        </view>
      </view>

      <view class="image-box">
        <block wx:for="{{imageArr}}" wx:key="index"  wx:for-index="index" wx:for-item="item">
          <image class="image-item" src="{{item}}"></image>
        </block>
        <view class="upload">
          <image catchtap="chooseImage" class="upload_icon" src="../../images/contentCheck/upload.png"></image>
        </view>
      </view>


      <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit">Submit</button>
        <button style="margin: 30rpx 0" formType="reset">Reset</button>
      </view>
    </form>
  </view>

</view>
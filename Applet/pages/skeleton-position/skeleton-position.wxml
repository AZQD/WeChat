<skeleton selector="skeleton"
          loading="spin"
          bgcolor="#fff"
          wx:if="{{showSkeleton}}">
</skeleton>

<view class="wrapper skeleton">

    <text class="title skeleton-rect">常规元素</text>
    <view class="box">
        <text class="item skeleton-rect">
            <text class="skeleton-radius">求职</text>
        </text>
        <text class="item skeleton-rect">
            <text class="skeleton-radius">招聘</text>
        </text>
        <text class="item skeleton-rect">
            <text class="skeleton-radius">二手</text>
        </text>
    </view>


    <text class="title skeleton-rect">浮动元素</text>
    <view class="box2">
        <view class="item2 skeleton-rect">
            <text class="skeleton-radius">求职</text>
        </view>
        <view class="item2 skeleton-rect">
            <text class="skeleton-radius">招聘</text>
        </view>
        <view class="item2 skeleton-rect">
            <text class="skeleton-radius">二手</text>
        </view>
    </view>


    <text class="title skeleton-rect">定位元素</text>
    <view class="box3 skeleton-rect">
        <view class="item3 skeleton-rect">
            <text class="skeleton-radius">求职</text>
        </view>
        <view class="item3 skeleton-rect">
            <text class="skeleton-radius">招聘</text>
        </view>
        <view class="item3 skeleton-rect">
            <text class="skeleton-radius">二手</text>
        </view>
    </view>

</view>

/* pages/contentCheck/contentCheck.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  padding: 0 20rpx;
}
.listBox{
  padding-top: 20rpx;
}

.listBox .listItem{
  padding: 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.listBox .listItem .title{
  color: #222;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-word;
}
.listBox .listItem .content{
  color: #666;
  font-size: 28rpx;
  padding-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-word;
}
.listBox .listItem .imgs{
  overflow: hidden;
  padding-top: 12rpx;
}
.listBox .listItem .imgs .image-item{
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  border-radius: 5rpx;
}
.listBox .listItem .imgs .image-item:nth-child(3n){
  margin-right: 0;
}

.noMoreData {
  text-align: center;
  padding: 32rpx 0;
}